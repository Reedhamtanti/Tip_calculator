@model Calculator

@{
    ViewBag.Title = "Tip Calculator";
}

<div asp-validation-summary="All"></div>

<form asp-action="Index" method="post">
    <div>
        <label asp-for="MealCost">Cost of meal:</label>
        <input asp-for="MealCost" />
    </div>
    <div>
        <label>19% tip:</label>
        <label>@ViewBag.Nineteen.ToString("c2")</label>
    </div>
    <div>
        <label>59% tip:</label>
        <label>@ViewBag.Fiftynine.ToString("c2")</label>
    </div>
    <div>
        <label>93% tip:</label>
        <label>@ViewBag.Ninetythree.ToString("c2")</label>
    </div>
    <div>
        <button type="submit">Calculate</button>
        <a asp-action="Index">Clear</a>
    </div>
</form>
